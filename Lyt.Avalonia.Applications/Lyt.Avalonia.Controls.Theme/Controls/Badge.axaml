<Styles 
	xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:badge="using:Lyt.Avalonia.Controls.Badge"
	>
	<Style Selector="badge|Badge">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="BadgeContentTemplate">
			<DataTemplate>
				<Panel>
					<Ellipse Fill="Red"
							 Stroke="White"
							 StrokeThickness="2.0"
							 Width="20"
							 Height="20"/>
					<TextBlock Text="{Binding $parent[badge|Badge].BadgeContent}"
							   FontSize="14"
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"/>
				</Panel>
			</DataTemplate>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Grid Margin="{TemplateBinding Margin}">
					<ContentPresenter Name="PART_ContentPresenter"
									  Content="{TemplateBinding Content}"
									  ContentTemplate="{TemplateBinding ContentTemplate}"/>
					<ContentPresenter Name="PART_BadgePresenter"
									  Content="{TemplateBinding BadgeContent}"
									  ContentTemplate="{TemplateBinding BadgeContentTemplate}"
									  VerticalAlignment="{Binding $parent[badge|Badge].BadgeVerticalAlignment}"
									  HorizontalAlignment="{Binding $parent[badge|Badge].BadgeHorizontalAlignment}"
									  Margin="{Binding $parent[badge|Badge].BadgeThickness}"/>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
